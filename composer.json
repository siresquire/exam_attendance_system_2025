{
    "name": "exam-attendance-system/app",
    "description": "Exam Attendance Management System",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "exam_attendance_system/classes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('exam_attendance_system/db.php.example', 'exam_attendance_system/db.php');\""
        ]
    }
}